{
    "name"        : "jbzoo/toolbox",
    "description" : "It directly integrates the entire JBZoo libraries in one place. In the future, it will be the framework.",
    "license"     : "MIT",
    "keywords"    : ["jbzoo", "toolbox"],

    "authors"     : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"     : {
        "php"               : ">=7.4",

        "jbzoo/assets"      : ">=5.0.0",
        "jbzoo/data"        : ">=5.0.0",
        "jbzoo/event"       : ">=4.0.1",
        "jbzoo/http-client" : ">=4.0.0",
        "jbzoo/image"       : ">=5.3.0",
        "jbzoo/less"        : ">=5.0.0",
        "jbzoo/mermaid-php" : ">=3.0.0",
        "jbzoo/path"        : ">=4.0.0",
        "jbzoo/utils"       : ">=5.0.0",
        "jbzoo/retry"       : ">=3.0.0",
        "jbzoo/markdown"    : ">=1.2.0",
        "jbzoo/cli"         : ">=2.0.0",

        "guzzlehttp/guzzle" : ">=6.5.5"
    },

    "require-dev" : {
        "jbzoo/phpunit"             : ">=5.0.0",
        "jbzoo/codestyle"           : ">=4.0.1",
        "jbzoo/composer-graph"      : ">=1.6.0",
        "jbzoo/composer-diff"       : ">=1.8.0",
        "jbzoo/toolbox-dev"         : ">=4.0.1",
        "jbzoo/ci-report-converter" : ">=2.9.0",
        "jbzoo/jbdump"              : ">=1.5.6",

        "rmccue/requests"           : ">=2.0.3",
        "roave/security-advisories" : "dev-master"
    },

    "extra"       : {
        "branch-alias" : {
            "dev-master" : "1.x-dev"
        }
    }
}
