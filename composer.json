{
    "name"              : "jbzoo/toolbox",
    "description"       : "It directly integrates the entire JBZoo libraries in one place. In the future, it will be the framework.",
    "type"              : "library",
    "license"           : "MIT",
    "keywords"          : [
        "jbzoo",
        "toolbox"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"                 : "^8.1",
        "ext-dom"             : "*",

        "jbzoo/assets"        : "^7.0",
        "jbzoo/cli"           : "^7.0",
        "jbzoo/data"          : "^7.0",
        "jbzoo/event"         : "^7.0",
        "jbzoo/http-client"   : "^7.0",
        "jbzoo/image"         : "^7.0",
        "jbzoo/less"          : "^7.0",
        "jbzoo/markdown"      : "^7.0",
        "jbzoo/mermaid-php"   : "^7.0",
        "jbzoo/path"          : "^7.0",
        "jbzoo/retry"         : "^7.0",
        "jbzoo/utils"         : "^7.0",
        "jbzoo/csv-blueprint" : "^0.3",

        "guzzlehttp/guzzle"   : ">=6.5.5"
    },

    "require-dev"       : {
        "jbzoo/ci-report-converter" : "^7.0",
        "jbzoo/codestyle"           : "^7.0",
        "jbzoo/composer-diff"       : "^7.0",
        "jbzoo/composer-graph"      : "^7.0",
        "jbzoo/jbdump"              : ">=1.5.6|^7.0",
        "jbzoo/phpunit"             : "^7.0",

        "rmccue/requests"           : ">=2.0.7",
        "roave/security-advisories" : "dev-master"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\Toolbox\\" : "src"}
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
