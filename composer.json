{
    "name"              : "jbzoo/toolbox",
    "description"       : "It directly integrates the entire JBZoo libraries in one place. In the future, it will be the framework.",
    "license"           : "MIT",
    "keywords"          : ["jbzoo", "toolbox"],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"           : {
        "php"                  : ">=7.2",

        "jbzoo/assets"         : ">=4.1.2",
        "jbzoo/data"           : ">=4.1.3",
        "jbzoo/event"          : ">=3.0.3",
        "jbzoo/http-client"    : ">=3.4.1",
        "jbzoo/image"          : ">=5.0.3",
        "jbzoo/less"           : ">=4.0.4",
        "jbzoo/mermaid-php"    : ">=2.1.3",
        "jbzoo/path"           : ">=3.0.3",
        "jbzoo/utils"          : ">=4.2.3",

        "guzzlehttp/guzzle"    : ">=6.5.5",
        "hanneskod/classtools" : ">=1.2.1"
    },

    "require-dev"       : {
        "jbzoo/phpunit"             : ">=4.4.6",
        "jbzoo/codestyle"           : "dev-master",
        "jbzoo/composer-graph"      : ">=1.0.4",
        "jbzoo/composer-diff"       : ">=1.1.2",
        "jbzoo/toolbox-dev"         : ">=2.6.1",
        "jbzoo/toolbox-ci"          : ">=1.3.5",

        "rmccue/requests"           : ">=1.7.0",
        "roave/security-advisories" : "dev-master"
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "2.x-dev"
        }
    }
}
