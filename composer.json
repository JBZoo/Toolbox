{
    "name"              : "jbzoo/toolbox",
    "description"       : "It directly integrates the entire JBZoo libraries in one place. In the future, it will be the framework.",
    "license"           : "MIT",
    "keywords"          : ["jbzoo", "toolbox"],

    "require"           : {
        "php"               : ">=7.2",

        "jbzoo/assets"      : "^4.0.0",
        "jbzoo/data"        : "^4.0.0",
        "jbzoo/event"       : "^3.0.0",
        "jbzoo/http-client" : "^3.0.0",
        "jbzoo/image"       : "^5.0.0",
        "jbzoo/less"        : "^4.0.0",
        "jbzoo/mermaid-php" : "^2.0.0",
        "jbzoo/path"        : "^3.0.0",
        "jbzoo/utils"       : "^4.0.0",

        "guzzlehttp/guzzle" : "^6.4.1||^7.0"
    },

    "require-dev"       : {
        "jbzoo/phpunit"             : "^4.0.0",
        "jbzoo/codestyle"           : "^2.0.0",
        "jbzoo/composer-graph"      : "^1.0.0",
        "jbzoo/composer-diff"       : "^1.0.0",

        "roave/security-advisories" : "dev-master",

        "rmccue/requests"           : "^1.7.0"
    },

    "minimum-stability" : "stable",

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "2.0.x-dev"
        }
    }
}
