{
    "name"              : "jbzoo/toolbox",
    "description"       : "It directly integrates the entire JBZoo libraries in one place. In the future, it will be the framework.",
    "type"              : "library",
    "license"           : "MIT",
    "keywords"          : [
        "jbzoo",
        "toolbox"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"               : "^8.1",

        "jbzoo/assets"      : "7.x-dev",
        "jbzoo/data"        : "7.x-dev",
        "jbzoo/event"       : "7.x-dev",
        "jbzoo/http-client" : "7.x-dev",
        "jbzoo/image"       : "7.x-dev",
        "jbzoo/less"        : "7.x-dev",
        "jbzoo/mermaid-php" : "7.x-dev",
        "jbzoo/path"        : "7.x-dev",
        "jbzoo/utils"       : "7.x-dev",
        "jbzoo/retry"       : "7.x-dev",
        "jbzoo/markdown"    : "7.x-dev",
        "jbzoo/cli"         : "7.x-dev",

        "guzzlehttp/guzzle" : ">=6.5.5"
    },

    "require-dev"       : {
        "jbzoo/phpunit"             : "7.x-dev",
        "jbzoo/codestyle"           : "7.x-dev",
        "jbzoo/composer-graph"      : "7.x-dev",
        "jbzoo/composer-diff"       : "7.x-dev",
        "jbzoo/ci-report-converter" : "7.x-dev",
        "jbzoo/jbdump"              : ">=1.5.6",

        "rmccue/requests"           : ">=2.0.3",
        "roave/security-advisories" : "dev-master"
    },

    "autoload"          : {
        "psr-4"    : {"JBZoo\\Toolbox\\" : "src"},
        "classmap" : ["src/"]
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
