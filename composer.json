{
    "name"        : "jbzoo/toolbox",
    "description" : "It directly integrates the entire JBZoo libraries in one place. In the future, it will be the framework.",
    "license"     : "MIT",
    "keywords"    : ["jbzoo", "toolbox"],

    "authors"     : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "require"     : {
        "php"                  : ">=7.2",

        "jbzoo/assets"         : ">=4.2.0",
        "jbzoo/data"           : ">=4.2.0",
        "jbzoo/event"          : ">=3.1.0",
        "jbzoo/http-client"    : ">=3.5.0",
        "jbzoo/image"          : ">=5.1.0",
        "jbzoo/less"           : ">=4.1.0",
        "jbzoo/mermaid-php"    : ">=2.2.0",
        "jbzoo/path"           : ">=3.1.0",
        "jbzoo/utils"          : ">=4.3.0",
        "jbzoo/retry"          : ">=2.1.0",

        "guzzlehttp/guzzle"    : ">=6.5.5",
        "hanneskod/classtools" : ">=1.2.1"
    },

    "require-dev" : {
        "jbzoo/phpunit"             : ">=4.8.0",
        "jbzoo/codestyle"           : ">=2.10.0",
        "jbzoo/composer-graph"      : ">=1.2.0",
        "jbzoo/composer-diff"       : ">=1.4.0",
        "jbzoo/toolbox-dev"         : ">=2.10.0",
        "jbzoo/toolbox-ci"          : ">=1.4.0",
        "jbzoo/jbdump"              : ">=1.5.6",

        "rmccue/requests"           : ">=1.7.0",
        "roave/security-advisories" : "dev-master"
    },

    "extra"       : {
        "branch-alias" : {
            "dev-master" : "2.x-dev"
        }
    }
}
